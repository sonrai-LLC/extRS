    <script>
        $(document).ready(function ($) {
            $("body").on("click", function () {
                $(".ui-dialog.clickoncloseoutside:visible")
                    .find(".ui-dialog-content")
                    .dialog("close");
            });
        });

        function asyncManageCatalogItemModal(id) {
            wireManageItemModal(id);
            let dialogId = "#dialog" + id;
            $(".ui-dialog-content").dialog("close");
            $.ajax({
                type: 'GET',
                url: '/CatalogItems/GetManageCatalogItemModal',
                data: { "id": id },
                success: function (response) {
                    $(dialogId).html(response);
                    $(dialogId).dialog('open');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (arg) {
                    console.log(arg);
                }
            });
        }

        function asyncManageSubscriptionModal(id) {
            wireSubscriptionModal(id);
            $("body").on("click", function () {
                $(".ui-dialog.clickoncloseoutside:visible")
                    .find(".ui-dialog-content")
                    .dialog("close");
            });
            let subscriptionDialog = "#subscriptionDialog" + id;
            $.ajax({
                type: 'GET',
                url: '/Subscriptions/GetManageSubscriptionModal',
                data: { "id": id },
                success: function (response) {
                    $(subscriptionDialog).html(response);
                    $(subscriptionDialog).dialog('open');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (arg) {
                    console.log(arg);
                }
            });
        }

        function wireSubscriptionModal(id) {
            let dialogId = "#subscriptionDialog" + id;
            $(dialogId).dialog({
                autoOpen: false,
                modal: false,
                hide: { effect: 'drop', duration: 200 },
                dialogClass: "clickoncloseoutside",
                position: { my: "right top", at: "left", of: "#" + id }
            });
        }

        function confirmDeleteSubscription(id, message) {
            $('<div id="deleteConfirm" style="padding: 10px">Delete subscription?</div>').dialog({
                autoOpen: true,
                modal: false,
                title: 'Confirm',
                center: false,
                buttons: {
                    "OK": function () {
                        $(this).dialog("close");
                        deleteSubscription(id, message);
                    },
                    "Cancel": function () {
                        $(this).dialog("close");
                    }
                }
            });
        }

