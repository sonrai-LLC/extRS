    .highcharts-description {
        margin: 0.3rem 10px;
    }


</style>
<head>
    <script>
        var d = new Date();
        $(document).ready(function () {

            Highcharts.chart('potusApproval', {

            title: {
                text: 'Trump Job Approval',
                align: 'left'
            },

            subtitle: {
                    text: 'Source: <a href="https://api.votehub.com/polls?poll_type=approval&subject=Trump" target="_blank">VoteHub</a>.',
                align: 'left'
            },

            yAxis: {
                title: {
                    text: 'Approval'
                }
            },

            xAxis: {
                accessibility: {
                    rangeDescription: 'Range: 2025 to present'
                },
                type: 'datetime',
                // labels: {
                //     format: '{value:%Y-%m-%d}'
                // }
            },

            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle'
            },

            plotOptions: {
                series: {
                    label: {
                       // pointStart: '01-27-2025',
                        pointIntervalUnit: 'day',
                        connectorAllowed: false
                    }
                }
            },

            series: [{
                name: 'Approve',
                data: [ @Model.HighChartsModel.Approve.ToArray() ]
            }, {
                name: 'Disapprove',
                data: [ @Model.HighChartsModel.Disapprove.ToArray() ]
            }],

            responsive: {
                rules: [{
                    condition: {
                        maxWidth: 500
                    },
                    chartOptions: {
                        legend: {
                            layout: 'horizontal',
                            align: 'center',
                            verticalAlign: 'bottom'
                        }
                    }
                }]
            }

        });
    });
    </script>
</head>

