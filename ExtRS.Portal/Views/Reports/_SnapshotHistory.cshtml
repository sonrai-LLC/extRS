@using ReportingServices.Api.Models
@model SnapshotHistoryView

<style>
    a.button {
        background: url(../Images/image.gif) no-repeat top left;
        display: block;
        width: 150px;
        height: 150px;
        text-indent: -9999px; /* hides the link text */
    }
</style>

<div class="container">
    @Html.ActionLink("Create Snapshot", "CreateReportSnapshot", "Reports", new { @class="button", id = @Model.ReportId })
    <section>
        @foreach (var snapshot in Model.HistorySnapshots)
        {
            <div class="bg-dark" style="box-shadow: 2.5px 5px 4px #888888;">
                <a href="@snapshot.Id class=" nav_link><i class="bx bx-line-chart"></i><span class="nav_name">@snapshot.CreationDate</span></a>
            </div>
        }
    </section>
</div>
